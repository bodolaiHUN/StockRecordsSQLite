<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bodoo.stockrecordssqlite">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LekerdezesActivity"
            android:label="@string/title_activity_lekerdezes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SingleItemView"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LekerdezesNew"
            android:label="@string/title_activity_lekerdezes_new"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
